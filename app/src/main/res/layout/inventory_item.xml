<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:id="@+id/inventoryItemPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
     />

    <TextView
        android:id="@+id/inventoryItemName"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/inventoryItemPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Soap"
        />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/inventoryItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/inventoryItemPhoto"
        app:layout_constraintBottom_toTopOf="@id/inventoryItemUnits"
        tools:text="2.0â‚¬"
        />
    <TextView
        android:id="@+id/units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/units"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/inventoryItemUnits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="@string/units"
        app:layout_constraintStart_toEndOf="@id/inventoryItemPhoto"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="30u"
        />

    <ImageView
        android:id="@+id/inventoryEditItem"
        android:src="@drawable/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/inventoryDeleteItem"
        android:textAlignment="center"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        />
    <ImageView
        android:id="@+id/inventoryDeleteItem"
        android:src="@drawable/ic_trash_can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>