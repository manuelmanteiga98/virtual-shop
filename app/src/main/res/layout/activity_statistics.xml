<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.statistics.StatisticsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="40sp"
        android:paddingRight="40sp">

        <LinearLayout
            android:id="@+id/registrationDate"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:width="100dp"
                android:gravity="center"
                android:text="@string/registration_date" />

            <TextView
                android:id="@+id/statRegistrationDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:minHeight="48dp"
                tools:text="Code" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/employees"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:width="100dp"
                android:gravity="center"
                android:text="@string/number_employees" />

            <TextView
                android:id="@+id/statEmployees"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:minHeight="48dp"
                tools:text="Code" />
        </LinearLayout>

        <!-- SALES -->

        <LinearLayout
            android:id="@+id/maxSale"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:width="100dp"
                android:gravity="center"
                android:text="@string/max_sale" />

            <TextView
                android:id="@+id/statMaxSale"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:minHeight="48dp"
                tools:text="Code" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/minSale"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:width="100dp"
                android:gravity="center"
                android:text="@string/min_sale" />

            <TextView
                android:id="@+id/statMinSale"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:minHeight="48dp"
                tools:text="Code" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/maxSalesDay"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:width="100dp"
                android:gravity="center"
                android:text="@string/max_sales_day" />

            <TextView
                android:id="@+id/statMaxSalesDay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:minHeight="48dp"
                tools:text="Code" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/minSalesDay"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:width="100dp"
                android:gravity="center"
                android:text="@string/min_sales_day" />

            <TextView
                android:id="@+id/statMinSalesDay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:minHeight="48dp"
                tools:text="Code" />
        </LinearLayout>

        <!-- ITEMS -->

        <LinearLayout
            android:id="@+id/maxCostItem"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:width="100dp"
