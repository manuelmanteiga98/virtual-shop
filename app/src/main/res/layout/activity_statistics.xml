            <TextView
                android:id="@+id/statMaxCostItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:minHeight="48dp"
                tools:text="Code" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/minCostItem"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:width="100dp"
                android:gravity="center"
                android:text="@string/min_cost" />

            <TextView
                android:id="@+id/statMinCostItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:minHeight="48dp"
                tools:text="Code" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/maxPriceItem"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:width="100dp"
                android:gravity="center"
                android:text="@string/max_price" />

            <TextView
                android:id="@+id/statMaxPriceItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="center"
                android:minHeight="48dp"
                tools:text="Code" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/minPriceItem"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:width="100dp"
